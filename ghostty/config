# Window
window-padding-x = 8
window-padding-y = 8
window-decoration = false

# Theme
background = #0b0f14
foreground = #cdd6f4

# ANSI palette (subtle, readable) - use palette instead of color0..color15
palette = 0=#1e1e2e
