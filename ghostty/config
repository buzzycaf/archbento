# Archbento Ghostty base config
# TTY-safe defaults, Wayland-ready

# Font
font-family = monospace
font-size = 11

# Cursor
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 100000

# Clipboard
clipboard-read = allow
